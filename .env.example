# 数据库连接 (Neon PostgreSQL)
DATABASE_URL="postgresql://[user]:[password]@[host]/[database]?sslmode=require"

# NextAuth.js 配置
# 生成方法: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (可选)
# 获取地址: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Apple OAuth (可选,需要Apple Developer账号)
# APPLE_ID="your-apple-id"
# APPLE_TEAM_ID="your-team-id"
# APPLE_KEY_ID="your-key-id"
# APPLE_PRIVATE_KEY="your-private-key"

# QQ OAuth (可选,需要QQ互联平台账号)
# QQ_CLIENT_ID="your-qq-app-id"
# QQ_CLIENT_SECRET="your-qq-app-key"

# 微信OAuth (可选,需要微信开放平台账号)
# WECHAT_CLIENT_ID="your-wechat-app-id"
# WECHAT_CLIENT_SECRET="your-wechat-app-secret"

# Resend 邮件服务 (必需)
# 获取地址: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxx"

# 发件邮箱地址
# 开发环境: onboarding@resend.dev
# 生产环境: noreply@yourdomain.com (需要验证域名)
EMAIL_FROM="onboarding@resend.dev"
